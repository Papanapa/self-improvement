<html>
<head>
<title>掲示板</title>
<link rel="stylesheet" href="/css/style.css">
</head>
    <body>
        <div class="container">
            <p>タスク一覧</p>
            <ul>
                <% for(let i in message_list_for_project){ %>
                    <li class="list-group-item">id:<%= message_list_for_project[i]["id"] %>　プロジェクト名:<%= message_list_for_project[i]["project_name"] %></li>
                    <% for(let j in message_list_for_task){ %>
                      <% if(message_list_for_task[j]["project_id"] == message_list_for_project[i]["id"]){ %>
                        <li class="list-group-item">┗id:<%= message_list_for_task[j]["id"] %>　タスク名：<%= message_list_for_task[j]["task_name"] %>　<span class="small">紐づいているプロジェクトのid:<%= message_list_for_task[j]["project_id"] %></span></li>
                      <% } %>
                    <% } %>
                <% } %>
            </ul>
            <form action="/" method="POST">
                <div class="form-group">
                    <label for="text1">プロジェクトを追加:</label>
                    <input type="text" id="project_message" name="project_message" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-block btn-outline-success" value="project_button">送信</button>
                </div>
            </form>
            <form action="/" method="POST">
                <div class="form-group">
                    <label for="text1">ユーザーを追加:</label>
                    <input type="text" id="user_message" name="user_message" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-block btn-outline-success" value="user_button">送信</button>
                </div>
            </form>
        </div>
    </body>
</html>
